                    </g>
                  </svg>

                  <span class="sessions__password-tooltip">
                    <span data-registration-target="tooltip_show_pwd" class="t-sessions__superscript hidden"><%= t("sessions.password_show") %></span>
                    <span data-registration-target="tooltip_hide_pwd" class="t-sessions__superscript hidden"><%= t("sessions.password_hide") %></span>
                  </span>
                </button>
              </div>
            </div>
          </div>

          <div class="reg__office-only" aria-hidden="true">
            <label for="userName"></label>
            <input type="text"
                   id="userName"
                   name="userName"
                   data-registration-target="userName"
                   data-action="input->registration#trackActivity"
                   tabindex="-1"
                   autocomplete="off">
          </div>

          <!-- Step 0-b -->
          <div class="reg__floating-label-wrap">
            <div data-registration-target="inputBeautyRegB" class="sessions__floating-label hidden">
              <div class="t-sessions__superscript only-s0"><%= t("registrations.superscript_lastName") %></div>
            </div>
          </div>

          <div class="sessions__input-wrap only-s0" id="regist_step_0_2">
            <div data-action="keydown.enter->registration#fn_handleEnter"
                  class="sessions__form">

              <label for="regLN"></label>
              <input data-registration-target="lastName"
                     class="sessions__input t-sessions__input"
                     id="regLN"
                     type="text"
                     spellcheck="false"
                     autocomplete="off"
                     required
                     placeholder="<%= t("registrations.last_name") %>"
                     data-action="input->registration#render input->registration#trackActivity">
            </div>
          </div>

          <div class="reg__input-wrap-empty only-s1 only-s2" id="regist_step_1-2"></div>

          <!-- buttons -->
          <div class="sessions__actions">

            <div class="sessions__create-wrap only-s0">
              <%= link_to t("registrations.reset_password"),
                          new_password_path,
                          class: "sessions__create-btn t-sessions__create"
              %>
            </div>

            <div class="sessions__proceed only-s1 only-s2">
              <%= button_tag type: "button",
                             class: "sessions__proceed-btn t-sessions__proceed",
                             data: { action: "click->registration#fn_back" } do %>
                <span> <%= t("registrations.button_back") %> </span>
              <% end %>
            </div>

            <div class="reg__proceed-space only-s1 only-s2"></div>

            <div class="sessions__proceed">
              <%= button_tag type: "button",
                             class: "sessions__proceed-btn t-sessions__proceed",
                             data: { action: "click->registration#fn_next" } do %>
                <span data-registration-target="btnLabel">
                  <%= t("registrations.button_continue") %>
                </span>
              <% end %>
            </div>

          </div>

        </div>

      </div>

      <%= render "shared/sessions/sessions_footer" %>

    </div>

    <div class="sessions__side"></div>

  </div>

</div>


