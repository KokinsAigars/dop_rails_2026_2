              <div class="t-sessions__superscript only-s1"><%= t("registrations.superscript_emailAddress") %></div>
              <div class="t-sessions__superscript only-s2"><%= t("registrations.superscript_password") %></div>
            </div>
          </div>

          <!-- Step 0-a -->
          <div class="sessions__input-wrap only-s0" id="regist_step_0_1">
            <div data-action="keydown.enter->registration#fn_handleEnter"
                  class="sessions__form">

              <label for="regFN"></label>
              <input data-registration-target="firstName"
                     class="sessions__input t-sessions__input"
                     id="regFN"
                     type="text"
                     spellcheck="false"
                     autocomplete="off"
                     required
                     placeholder="<%= t("registrations.first_name") %>"
                     data-action="input->registration#render input->registration#trackActivity" >
            </div>
          </div>

          <!-- Step 1 -->
          <div class="sessions__input-wrap only-s1" id="regist_step_1">
            <div data-action="keydown.enter->registration#fn_handleEnter"
                 class="sessions__form">

              <label for="regEm"></label>
              <input data-registration-target="email"
                class="sessions__input t-sessions__input"
                id="regEm"
                type="email"
                spellcheck="false"
                autocomplete="off"
                required
                placeholder="<%= t("registrations.email_address") %>"
                data-action="input->registration#render input->registration#trackActivity">
            </div>
          </div>

          <!-- Step 2 -->
          <div class="sessions__input-wrap only-s2" id="regist_step_2">
            <div data-registration-target="inputForm"
                 data-action="keydown.enter->registration#fn_handleEnter"
                 class="sessions__form">

              <input data-registration-target="password"
                     class="sessions__input t-sessions__input"
                     id="regEm"
                     type="password"
                     spellcheck="false"
                     autocomplete="off"
                     required
                     placeholder="<%= t("registrations.create_password") %>"
                     data-action="input->registration#render input->registration#trackActivity">

              <div class="only-s2">
                <button data-registration-target="eyeBtn"
                        data-action="mouseenter->registration#fn_onEyeEnter
                             mouseleave->registration#fn_onEyeLeave
