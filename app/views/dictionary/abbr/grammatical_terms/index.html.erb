<%# app/views/dictionary/abbr/grammatical_terms/index.html.erb %>
<div class="dictionary-container">
  <h1>Grammatical Terms</h1>

  <%= form_with url: abbr_grammatical_terms_path, method: :get, local: true, class: "search-form" do |f| %>
    <%= f.text_field :q, value: params[:q], placeholder: "Search grammatical abbreviations...", class: "search-input" %>
    <%= f.submit "Search", class: "btn-primary" %>
  <% end %>

  <div class="alpha-nav">
    <% ('A'..'Z').each do |letter| %>
      <%= link_to letter, abbr_grammatical_terms_path(letter: letter),
                  class: ("active" if params[:letter] == letter) %>
    <% end %>
  </div>

  <table class="dic-table">
    <thead>
    <tr>
      <th>Abbreviation</th>
      <th>Meaning (LV)</th>
      <th>Estonian ID</th>
    </tr>
    </thead>
    <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= link_to record.abbr_name, abbr_grammatical_term_path(record) %></td>
        <td><%= record.abbr_lv %></td>
        <td><%= record.abbr_id_est %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div class="pagination-simple">
    <% if @page > 1 %>
      <%= link_to "← Prev", abbr_grammatical_terms_path(page: @page - 1, q: params[:q], letter: params[:letter]), class: "btn" %>
    <% end %>
    <span class="page-info">Page <%= @page %></span>
    <% if @records.count == @per_page %>
      <%= link_to "Next →", abbr_grammatical_terms_path(page: @page + 1, q: params[:q], letter: params[:letter]), class: "btn" %>
    <% end %>
  </div>
</div>