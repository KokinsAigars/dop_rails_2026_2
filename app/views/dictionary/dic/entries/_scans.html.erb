<%# app/views/dictionary/dic/entries/_scans.html.erb %>
<% if scans.any? %>

  <% scans.each do |scan| %>
    <div class="card mb-3 shadow-sm">
      <%# Assuming images are in /public/scans/ %>
<!--      <img src="/scans/<%#= scan.scan_filename %>"-->
<!--           class="card-img-top"-->
<!--           alt="Manuscript version <%#= scan.scan_version %>"-->
<!--           loading="lazy">-->

      <div class="card-body p-2">
        <div class="d-flex justify-content-between align-items-center">
          <span class="badge bg-dark">v<%= scan.scan_version %></span>
          <small class="text-muted"><%= scan.scan_status %></small>
        </div>

        <% if scan.scan_note.present? %>
          <p class="card-text small mt-2 italic"><%= scan.scan_note %></p>
        <% end %>

        <details class="mt-2">
          <summary class="small text-primary" style="cursor: pointer;">View Raw Text</summary>
          <pre class="bg-light p-2 mt-1" style="font-size: 0.75rem; white-space: pre-wrap;"><%= scan.scan_text_raw %></pre>
        </details>
      </div>
    </div>
  <% end %>
<% else %>
  <p class="text-muted">No manuscript scans found for this entry.</p>


