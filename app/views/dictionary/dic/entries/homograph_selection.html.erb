<%# app/views/dictionary/dic/entries/homograph_selection.html.erb %>
<div class="dictionary-container">
  <h2>Multiple entries found for "<%= params[:q] %>"</h2>
  <p>Please select the specific sense you are looking for:</p>

  <ul class="homograph-list">
    <% @entries.each do |entry| %>
      <li>
        <%= link_to dic_entry_path(entry) do %>
          <strong><%= entry.name %></strong>
          (Sense <%= entry.dic_index.homograph_no %>) â€”
          <span class="text-muted"><%= entry.grammar %></span>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
