<%= form_with model: row,
              url: row.persisted? ? ui_abbr_abbr_publication_source_path(row, locale: I18n.locale) : ui_abbr_abbr_publication_sources_path(locale: I18n.locale),
              method: row.persisted? ? :patch : :post do |f| %>

  <% if row.errors.any? %>
    <div style="border: 1px solid #c00; padding: 0.75rem; margin-bottom: 1rem;">
      <p><strong><%= pluralize(row.errors.count, "error") %> prevented saving:</strong></p>
      <ul>
        <% row.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 0.75rem;">
    <%= f.label :abbr_name %><br>
    <%= f.text_field :abbr_name, maxlength: 5, required: true %>
  </div>

  <div style="margin-bottom: 0.75rem;">
    <%= f.label :abbr_id_est %><br>
    <%= f.text_area :abbr_id_est, rows: 2 %>
  </div>

  <div style="margin-bottom: 0.75rem;">
    <%= f.label :abbr_note %><br>
    <%= f.text_area :abbr_note, rows: 3 %>
  </div>

  <div style="margin-bottom: 0.75rem;">
    <%= f.label :abbr_source_text %><br>
    <%= f.text_area :abbr_source_text, rows: 4 %>
  </div>

  <div style="margin-bottom: 0.75rem;">
    <%= f.label :abbr_citation %><br>
    <%= f.text_area :abbr_citation, rows: 4 %>
  </div>

  <div style="margin-bottom: 0.75rem;">
    <%= f.label :revision %>
    <%= f.check_box :revision %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
