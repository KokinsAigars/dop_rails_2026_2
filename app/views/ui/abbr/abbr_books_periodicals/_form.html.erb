<%= form_with model: [:ui, :abbr, @row], local: true do |f| %>

  <% if @row.errors.any? %>
    <div class="errors">
      <h3><%= pluralize(@row.errors.count, "error") %></h3>
      <ul>
        <% @row.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :abbr_letter %>
    <%= f.text_field :abbr_letter, maxlength: 1 %>
  </div>

  <div class="field">
    <%= f.label :abbr_name %>
    <%= f.text_field :abbr_name, required: true %>
  </div>

  <div class="field">
    <%= f.label :abbr_number %>
    <%= f.text_field :abbr_number %>
  </div>

  <div class="field">
    <%= f.label :abbr_note %>
    <%= f.text_area :abbr_note, rows: 4 %>
  </div>

  <div class="field">
    <%= f.label :abbr_source %>
    <%= f.text_area :abbr_source, rows: 3 %>
  </div>

  <div class="field">
    <%= f.label :revision %>
    <%= f.check_box :revision %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>
