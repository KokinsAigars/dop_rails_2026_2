<h1>Abbr Grammatical Term</h1>

<p>
  <%= link_to "Back", ui_abbr_abbr_grammatical_terms_path(locale: I18n.locale) %>
  |
  <%= link_to "Edit", edit_ui_abbr_abbr_grammatical_term_path(@row, locale: I18n.locale) %>
</p>

<dl>
  <dt>ID</dt>
  <dd><%= @row.id %></dd>

  <dt>Letter</dt>
  <dd><%= @row.abbr_letter %></dd>

  <dt>Name</dt>
  <dd><%= @row.abbr_name %></dd>

  <dt>ID (EST)</dt>
  <dd><pre><%= @row.abbr_id_est %></pre></dd>

  <dt>LV</dt>
  <dd><pre><%= @row.abbr_lv %></pre></dd>

  <dt>Ref ID</dt>
  <dd><%= @row.abbr_ref_id %></dd>

  <dt>Source Text</dt>
  <dd><pre><%= @row.abbr_source_text %></pre></dd>

  <dt>Revision</dt>
  <dd><%= @row.revision ? "yes" : "no" %></dd>

  <dt>Created At</dt>
  <dd><%= @row.created_at %></dd>

  <dt>Modified Date</dt>
  <dd><%= @row.modified_date %></dd>

  <dt>Modified By (jsonb)</dt>
  <dd><pre><%= JSON.pretty_generate(@row.modified_by || {}) rescue (@row.modified_by || {}).to_s %></pre></dd>
</dl>
